
@{
    ViewBag.Title = "EnviarCorreo";
}
<head>
	<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
	<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
</head>

<h2>Enviar Correo</h2>
<div>
<form  method="post" enctype="multipart/form-data" style="width:600px">
	<div>
		<label>Recivir email</label>
		<input class="form-control" type="email" name="Para" placeholder="Email"/>
	</div>
	<br />
	<div>
		<label>Asunto</label>
		<input class="form-control" type="text" name="Asunto" placeholder="Subject" />
	</div>
	<div>
		<label>Mensaje</label>
		<br />
		<textarea style="width:600px;height:150px;" name="Mensaje" placeholder="Escriba su mensaje"></textarea>
	</div>
	<br />
	<div>
		<button id="enviar" class="btn btn-primary" type="submit">Enviar correo</button>
	</div>
</form>
<h3 style="color:blue">
	@ViewBag.Mensaje
</h3>
<h3 style="color:red">
	@ViewBag.Enviar
</h3>
